<h1> Новый вагон </h1>

<%= form_for [@train, @carriage] do |f| %>
	<div class="field">
		<%= f.label :number, "Номер" %><br>
		<%= f.text_field :number %>
	</div>

	<div class="field">
		<%= f.label :top_seats, "Верхние места" %><br>
		<%= f.number_field :top_seats %>
	</div>

	<div class="field">
		<%= f.label :bottom_seats, "Нижние места" %><br>
		<%= f.number_field :bottom_seats %>
	</div>
	
	<div class="field">
		<%= f.label :side_top_seats, "Верхние боковые места" %><br>
		<%= f.number_field :side_top_seats %>
	</div>
	
	<div class="field">
		<%= f.label :side_bottom_seats, "Нижние боковые места" %><br>
		<%= f.number_field :side_bottom_seats %> 
	</div>

	<div class="actions">
		<%= f.submit "Создать" %><br>
	</div>

<% end %>
